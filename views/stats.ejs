                            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= os ? os.ios : '0' %> </div>
                        </div>
                        <div class="col-auto">
                            <i class="fa fa-apple fa-2x text-secondary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row pt-2 mx-auto w-100">

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
